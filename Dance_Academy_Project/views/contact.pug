block scripts
  script(src='/static/index.js')

block  style 
    style
        include ../static/stylecontact.css
        include ../static/style.css

block content 
    div.container
        h1 Contact US
        form(action="/contact",method="post", class="myForm") 
            input(type="text",class="myInput",name="name", placeholder="Enter your Name")
            input(type="numeroc",class="myInput",name="phonenumber", placeholder="Enter your Phone number")
            input(type="email",class="myInput",name="eamil", placeholder="Enter your email")
            input(type="text",class="myInput",name="address", placeholder="Enter your Address")
            textarea(name="Comment", cols="30", rows="10",class="myInput")
            button(class="btn")
                | Submit